{% extends 'base.html.twig' %}

{% block body %}
    <div class="container body-content span=8 offset=2">
        <div class="well">
            <form class="form-horizontal" action="{{ path('search') }}" method="post" enctype="multipart/form-data">
                <fieldset>
                    <legend>Search Place</legend>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="place_name">Country</label>
                        <div class="col-sm-4 " >
                            {{ form_widget(form.country, { 'attr':{'id': 'country_form', 'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="form_city">City</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.city, { 'attr':{'id': 'city_form', 'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="form_capacity">Capacity</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.capacity, { 'attr':{'id': 'capacity_form', 'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="form_startDate">Start Date</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.startDate, { 'attr':{'id': 'startDate_form', 'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-4 control-label" for="form_endDate">End Date</label>
                        <div class="col-sm-6">
                            {{ form_widget(form.endDate, { 'attr':{'id': 'endDate_form', 'class': 'form-control'} }) }}
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-4">
                            <a class="btn btn-default" href="{{ path('homepage') }}">Cancel</a>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>


{% endblock %}

