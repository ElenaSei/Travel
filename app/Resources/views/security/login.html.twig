{% extends 'base.html.twig' %}

{% block body %}
    <h1>Login</h1>
    <form name="authenticate" action="{{ path('security_login') }}" method="post">
        <label>
            Username: <input type="text" name="_username" required placeholder="Username">
        </label>
        <br>
        <label>
            Password: <input type="password" name="_password" required placeholder="Password">
        </label>
        <br>
        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
        <label>
            <input type="submit" value="Login">
        </label>
    </form>

{% endblock %}
