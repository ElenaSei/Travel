{% extends 'base.html.twig' %}

{% block main %}

    <link rel="stylesheet" href="{{ asset('css/messaging.css') }}">
<body>
<div class="containerMsg">
    <h3 class=" text-center">Messaging</h3>
    <div class="messaging">
    <div class="mesgs">
        <div class="msg_history">
            {% for message in messages %}

            {% if app.user == message.sender %}
            <div class="outgoing_msg">
                <div class="sent_msg">
                    <p>{{ message.content }}</p>
                    <span class="time_date">{{ message.dateAdded|date('H:m Y-m-d') }}</span> </div>
            </div>

            {% else %}

            <div class="incoming_msg">
                <div class="incoming_msg_img"> <a href="{{ path('send_message', {recipientId: message.sender.id}) }}"><img src="https://ptetutorials.com/images/user-profile.png" alt="sunil"></a> </div>
                <div class="received_msg">
                    <div class="received_withd_msg">
                        <p>{{ message.content }}</p>
                        <span class="time_date">{{ message.dateAdded|date('H:m Y-m-d') }}</span></div>
                </div>
            </div>

            {% endif %}
            {% endfor %}
            <div class="type_msg">
                <div class="input_msg_write">
                    <input type="text" class="write_msg" placeholder="Type a message" />
                    <button class="msg_send_btn" type="button"><i class="fa fa-paper-plane-o" aria-hidden="true"></i></button>
                </div>
            </div>
        </div>
        </div>
    </div>
    </div>
</div>
</body>


{% endblock %}

