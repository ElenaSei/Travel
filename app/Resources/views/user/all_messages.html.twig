{% extends 'base.html.twig' %}

{% block body %}
    {% for msg in app.session.flashbag.get('info') %}
        <div class="alert-danger">
            <a href="#" class="close" data-dismiss="alert"></a>
            {{ msg }}
        </div>
    {% endfor %}
    <div class="panel">
        <ul class="list-unstyled">
            <li class="panel-body">
                <div class="row">
                {% for message in messages %}

                    <div class="col-lg-12">
                <div class="col-sm-9 col-md-3 thread-author">
                    <div class="row row-table">
                        <div class="col-sm-7 thread-name text-truncate">
                            <div>
                                {{ message.sender.username }}
                            </div>
                            <time class="thread-date">
                                {{ message.dateAdded|date('Y-m-d')}}
                            </time>
                        </div>
                    </div>
                </div>
                    <div class="col-sm-7 col-md-5 col-lg-6 thread-body">
                        <a href="{{ path('user_view_message', {'id': message.session.id}) }}" ><p>{{ message.content }}</p></a>
                    </div>
                        {% if message.session.isRead == false %}
                            <span style="float: right; color: red">Unread</span>
                            {% endif %}
                    </div>
                    <hr>
                {% endfor %}
                </div>
            </li>
        </ul>
    </div>


{% endblock %}
